# http://editorconfig.org
root = true

[*]
indent_style = tab
# indent_size = 2 #not used since this should be up to everybody
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.lsg]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2
